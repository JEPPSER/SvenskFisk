<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jesper.svenskfisk.MainActivity"
    style="@android:style/Theme.Black.NoTitleBar">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sök Fisk"
        android:id="@+id/searchBtn"
        android:layout_marginTop="152dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/browseBtn"
        android:layout_alignEnd="@+id/browseBtn"
        android:layout_alignLeft="@+id/browseBtn"
        android:layout_alignStart="@+id/browseBtn"
        android:allowUndo="false"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identifiera fisk"
        android:id="@+id/idBtn"
        android:layout_below="@+id/searchBtn"
        android:layout_alignLeft="@+id/searchBtn"
        android:layout_alignStart="@+id/searchBtn"
        android:layout_alignRight="@+id/searchBtn"
        android:layout_alignEnd="@+id/searchBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utforska område"
        android:id="@+id/browseBtn"
        android:layout_below="@+id/idBtn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
